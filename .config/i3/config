#

# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:xos4 Terminus 10px

# disable title bars and borders
default_border none

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+c kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -fn "xos4 Terminus:pixelsize=14"

# start passmenu (a password manager)
bindsym $mod+s exec passmenu -fn "xos4 Terminus:pixelsize=14"

# take a screenshot
bindsym $mod+p exec "maim -u -s -f png | tee ~/Pictures/Screenshots/$(date +%s).png | xclip -sel clip -t image/png"

# start applications
set $mode_launcher [b]rowser [t]elegram [n]etbeans [v]lc [a]randr
mode "$mode_launcher" {
    bindsym b exec firefox
    bindsym t exec telegram-desktop
    bindsym n exec tmcbeans
    bindsym v exec vlc
    bindsym a exec arandr

    bindsym Escape mode "default"
}
bindsym $mod+a mode "$mode_launcher"

# change focus
bindsym $mod+h exec "~/.config/i3/move-cursor-window-center focus left"
bindsym $mod+j exec "~/.config/i3/move-cursor-window-center focus down"
bindsym $mod+k exec "~/.config/i3/move-cursor-window-center focus up"
bindsym $mod+l exec "~/.config/i3/move-cursor-window-center focus right"

# resize focused window
bindsym $mod+Shift+h resize shrink width 1 px or 1 ppt
bindsym $mod+Shift+j resize shrink height 1 px or 1 ppt
bindsym $mod+Shift+k resize grow height 1 px or 1 ppt
bindsym $mod+Shift+l resize grow width 1 px or 1 ppt

# move focused window
bindsym $mod+Control+Shift+h move left
bindsym $mod+Control+Shift+j move down
bindsym $mod+Control+Shift+k move up
bindsym $mod+Control+Shift+l move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f focus parent; fullscreen; focus child

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+q layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+1 exec "~/.config/i3/move-cursor-window-center workspace 1"
bindsym $mod+2 exec "~/.config/i3/move-cursor-window-center workspace 2"
bindsym $mod+3 exec "~/.config/i3/move-cursor-window-center workspace 3"
bindsym $mod+4 exec "~/.config/i3/move-cursor-window-center workspace 4"
bindsym $mod+5 exec "~/.config/i3/move-cursor-window-center workspace 5"
bindsym $mod+6 exec "~/.config/i3/move-cursor-window-center workspace 6"
bindsym $mod+7 exec "~/.config/i3/move-cursor-window-center workspace 7"
bindsym $mod+8 exec "~/.config/i3/move-cursor-window-center workspace 8"
bindsym $mod+9 exec "~/.config/i3/move-cursor-window-center workspace 9"
bindsym $mod+0 exec "~/.config/i3/move-cursor-window-center workspace 10"
bindsym $mod+comma exec "~/.config/i3/move-cursor-window-center workspace prev"
bindsym $mod+period exec "~/.config/i3/move-cursor-window-center workspace next"

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+comma move container to workspace prev
bindsym $mod+Shift+period move container to workspace next

# move ws's between outputs
bindsym $mod+Control+Shift+comma move workspace to output left
bindsym $mod+Control+Shift+period move workspace to output right

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Control+Shift+q exit
# power off
bindsym $mod+Control+Shift+p exec "systemctl poweroff"
# reboot
bindsym $mod+Control+Shift+b exec "systemctl reboot"

# brightness and volume
bindsym $mod+Down exec "xbacklight -dec 1"
bindsym $mod+Up exec "xbacklight -inc 1"
bindsym $mod+Shift+Down exec "xbacklight -dec 10"
bindsym $mod+Shift+Up exec "xbacklight -inc 10"
bindsym $mod+Control+Shift+Down exec "xbacklight -set 0"
bindsym $mod+Control+Shift+Up exec "xbacklight -set 100"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume 0 -1%"
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume 0 +1%"
bindsym Shift+XF86AudioLowerVolume exec "pactl set-sink-volume 0 -10%"
bindsym Shift+XF86AudioRaiseVolume exec "pactl set-sink-volume 0 +10%"
bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle"

# colors
# class                 border  bground text    indicator child_border
client.focused          #FFFFFF #FFFFFF #000000 #FFFFFF   #FFFFFF
client.focused_inactive #000000 #000000 #FFFFFF #000000   #000000
client.unfocused        #000000 #000000 #A4A4A4 #000000   #000000
client.urgent           #FFFFFF #000000 #FFFFFF #FFFFFF   #A4A4A4
client.placeholder      #000000 #000000 #FFFFFF #000000   #000000

client.background       #FFFFFF

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        status_command i3status

        colors {
                focused_workspace  #FFFFFF #FFFFFF #000000
                active_workspace   #000000 #000000 #FFFFFF
                inactive_workspace #000000 #000000 #A4A4A4
                urgent_workspace   #FFFFFF #000000 #FFFFFF
                binding_mode       #FFFFFF #000000 #FFFFFF
        }
}

# startup
exec --no-startup-id redshift-gtk
exec i3lock
